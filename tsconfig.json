{
    "compilerOptions": {
        "strict": true,
        "target": "ES2018",
        "lib": [
            "ES2018",
            "dom",
            "ES2020.String"
        ],
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
            ]
        }
    },
    "include": [
        "src"
    ]
}
